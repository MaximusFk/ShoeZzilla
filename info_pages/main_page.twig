<html>
    {% set main_c = 'menu_chosed' %}
    <head>
        {{ include('head.html') }}
        <title>Главная | Интернет-магазин ShoeZzilla shoezzilla.com.ua</title>
        <meta name="yandex-verification" content="194548e5658f7b9b" />
        <link rel="stylesheet" href="/styles/carousel_style.css"/>
        <link rel="stylesheet" href="/styles/shoes_list_item_style.css"/>
        <script type="text/javascript" src="/scripts/jquery_carousel/jquery.jcarousel.min.js"></script>
        <style>
            section.items_carousel {
                overflow: hidden;
            }
            section.items_carousel ul {
                width: 20000em;
                position: relative;
                list-style: none;
                margin: 0;
                padding: 0;
            }
            section.items_carousel ul li {
                float: left;
            }
        </style>
    </head>
    <body>
        <section class="main">
            {{ include('header.html') }}
            {{ include('navigation.html') }}
            <div style="float: left; width: 78%;" class="content content_block">
                <section id="newer">
                    <section class="jcarousel">
                        <ul>
                            <li><a href="/shoes/catalog.php?item_id=3"><img src="/shoes/promo/promoB1.jpg"></a></li>
                            <li><a href="#"><img src="/shoes/promo/promoDelivery.png"/></a></li>
                        </ul>
{#                        <button class="important_lower_b" id="prev">Previous</button>#}
{#                        <button class="important_lower_b" id="next">Next</button>#}
                    </section>
                </section>
                    <br/>
                <section class="content_block">
                    <h3>Новинки</h3>
                    <section class="items_carousel">
                    <ul>
                    {% for item in novelty %}
                        <li>{{ include('shoes_list_item.twig') }}</li>
                    {% endfor %}
                    </ul>
                    </section>
                </section>
                    <br/>
                <section class="content_block">
                    <h3>Хит продаж</h3>
                    <section class="items_carousel">
                    <ul>
                    {% for item in hits %}
                        <li>{{ include('shoes_list_item.twig') }}</li>
                    {% endfor %}
                    </ul>
                    </section>
                </section>
            </div>
                    
                    <div id="order_search_block" class="group sh_group">
                        <form action="/order.php">
                            <h4>Найти заказ</h4>
                            <h5>Код заказа</h5>
                            <input style="width: 150px;" type="text" name="access_code" placeholder="Введите код"/>
                            <button class="sh_important" type="reset">Очистить</button>
                            <br/>
                            <button class="sh_important" style="width: 100%; margin-top: 15px;" type="submit">Найти</button>
                        </form>
                    </div>
        
            {{ include('footer.html') }}
        </section>
        <script type="text/javascript">
            $(".jcarousel").jcarousel({
                animation: 'slow',
                wrap: 'circular'
                }).jcarouselAutoscroll({
                interval: 3000,
                target: '+=1',
                autostart: true
            });
            $(".items_carousel").jcarousel({
                animation: 'slow',
                wrap: 'circular'
                }).jcarouselAutoscroll({
                interval: 1900,
                target: '+=1',
                autostart: true
            });
            $(".jcarousel").width($(".jcarousel img").width());
                $(".jcarousel").height($(".jcarousel img").height());
            $("button#prev").click(function () {
                $('.jcarousel').jcarousel('scroll', '-=1');
            });
            $("button#next").click(function () {
                $('.jcarousel').jcarousel('scroll', '+=1');
            });
        </script>
    </body>
</html>