<section class="content_block" id="filter">
    <form name="filter" action="/shoes/catalog.php" method="GET">
        <p>
            <h5>Сортировка</h5>
            <div class="select_box">
            <select name="sort">
                <option value="display_name" {% if current.sort == "display_name" %}selected="selected"{% endif %}>По имени</option>
                <option value="price_retail" {% if current.sort == "price_retail" %}selected="selected"{% endif %}>По цене</option>
            </select>
            </div><br/>
            <div class="select_box">
            <select name="sort_t">
                <option value="ASC" {% if current.sort_t == "ASC" %}selected="selected"{% endif %}>По возрастанию</option>
                <option value="DESC" {% if current.sort_t == "DESC" %}selected="selected"{% endif %}>По убыванию</option>
            </select>
            </div>
            <hr/>
        </p>
        <p>
            <h5>Наименования</h5>
            {% for b in filter.brands %}
                <input name="brands[]" type="checkbox" value="{{ b }}" {% if b in current.brands %}checked="checked"{% endif %}/>{{ b }}<br/>
            {% endfor %}
        </p>
        <p>
            <h5>Категория</h5>
            <div class="select_box">
            <select name="category">
                <option value="all" {% if "all" == current.category %}selected="selected"{% endif %}>Все</option>
                {% for category in filter.categories %}
                    <option value="{{ category }}" {% if category == current.category %}selected="selected"{% endif %}>{{ tr(category) }}</option>
                {% endfor %}
            </select>
            </div>
            <h5>Сезон</h5>
            <div class="select_box">
            <select name="season">
                <option value="all" {% if "all" == current.season %}selected="selected"{% endif %}>Все</option>
                {% for season in filter.seasons %}
                    <option value="{{ season }}" {% if season == current.season %}selected="selected"{% endif %}>{{ tr(season) }}</option>
                {% endfor %}
            </select>
            </div>
        </p>
        <p>
            <h5>Цена</h5>
            <input class="short_i" name="price_min" type="number" placeholder="min:{{ filter.price_min }}" min="{{ filter.price_min }}" max="{{ filter.price_max }}" value="{{ current.price_min }}"/>&mdash;
            <input class="short_i" name="price_max" type="number" placeholder="max:{{ filter.price_max }}" min="{{ filter.price_min }}" max="{{ filter.price_max }}" value="{{ current.price_max }}"/>
        </p>
        <br/><hr/>
        <p>
            <h5>На странице</h5>
            <div class="select_box">
                <select name="page_size">
                    <option value="12"{% if 12 == current.page_size %}selected="selected"{% endif %}>12</option>
                    <option value="16"{% if 16 == current.page_size %}selected="selected"{% endif %}>16</option>
                    <option value="20"{% if 20 == current.page_size %}selected="selected"{% endif %}>20</option>
                    <option value="24"{% if 24 == current.page_size %}selected="selected"{% endif %}>24</option>
                    <option value="28"{% if 28 == current.page_size %}selected="selected"{% endif %}>28</option>
                    <option value="32"{% if 32 == current.page_size %}selected="selected"{% endif %}>32</option>
                </select>
            </div>
        </p>
        <button class="important_lower_b" type="submit">Показать</button>
    </form>
</section>