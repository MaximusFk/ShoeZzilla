<section class="list_item" id={{ item.ID }}>
    <img height="110" width="198" src="/shoes/photos/{{ item.img_code }}/{{ item.img_main }}_200.jpg">
    <div>
        <h3>{{ item.name }}</h3>
        <span>Цвет: <i>{{ item.color }}</i><br></span>
        <span>Цена: <i>{{ item.price }}</i> Грн.</span>
    </div>
    {#<button class="to_cart" onclick="click_handler_to_cart({{ item.ID }});">В корзину</button>#}
    <button id="more" onclick="click_handler_more({{ item.ID }});">Подробнее</button>
</section>